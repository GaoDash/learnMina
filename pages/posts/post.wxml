<!--pages/posts/post.wxml-->
<view class='page'>
  <!--轮播-->
  <swiper class='slider' indicator-dots='true' autoplay='true'>
    <swiper-item><image src='/assets/images/vr.png'></image></swiper-item>
    <swiper-item><image src='/assets/images/wx.png'></image></swiper-item>
    <swiper-item><image src='/assets/images/iqiyi.png'></image></swiper-item>
  </swiper>

  <!--新闻列表  -->
  <block wx:for="{{posts_content}}" wx:for-item="item" wx:for-index="idx">
    <view class='post-container'>
      <view class='post-author-date'>
        <image class='post-author' src='{{item.auth_image}}'></image>
        <text class='post-date'>{{item.date}}</text>
      </view> 
      <image class='post-image' src='{{item.post_image}}'></image>
      <text class='post-content'>{{item.content}}</text>
      <view class='post-like'>
        <image src='/assets/images/icon/chat.png'></image><text>{{item.view_num}}</text>
        <image src='/assets/images/icon/view.png'></image><text>{{item.collect_num}}</text>
      </view>
    </view>
  </block>
</view>
