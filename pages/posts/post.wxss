/* pages/posts/post.wxss */
.page{
  background-color: #eee;
}
.slider{
  width: 100%;
  height: 600rpx;
}
.slider image{
  width: 100%;
  height: 100%;
}
/*文章列表*/
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40repx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 1px;
}
.post-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}
.post-like image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle
}
.post-like text{
  margin-right: 20px;
  vertical-align: middle
}