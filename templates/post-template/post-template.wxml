<template name="postItem">
    <view class='post-container'>
      <view class='post-author-date'>
        <image class='post-author' src='{{auth_image}}'></image>
        <text class='post-date'>{{date}}</text>
      </view> 
      <image class='post-image' src='{{post_image}}'></image>
      <text class='post-content'>{{content}}</text>
      <view class='post-like'>
        <image src='/assets/images/icon/chat.png'></image><text>{{view_num}}</text>
        <image src='/assets/images/icon/view.png'></image><text>{{collect_num}}</text>
      </view>
    </view>
</template>